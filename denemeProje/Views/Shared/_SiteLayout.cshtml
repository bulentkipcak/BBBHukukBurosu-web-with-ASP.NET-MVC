</head>
<body>
    <div id="wrapper">
        <!-- start header -->
        <header>
            <div class="navbar navbar-default navbar-static-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="/Home/Index/"><span>BBB</span> Hukuk Bürosu</a>
                    </div>
                    <div class="navbar-collapse collapse ">
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="/Home/Index/">Ana Sayfa</a></li>
                            @*<li class="dropdown">
            <a href="#" class="dropdown-toggle " data-toggle="dropdown" data-hover="dropdown" data-delay="0" data-close-others="false">Hakkımızda <b class=" icon-angle-down"></b></a>
            <ul class="dropdown-menu">
                <li><a href="/Home/Hakkimizda/">Hakkımızda</a></li>
                <li><a href="/Home/Hizmetlerimiz/">Hizmetlerimiz</a></li>
                <li><a href="pricingbox.html">Pricing box</a></li>
            </ul>
        </li>*@
                            <li><a href="/Home/Hakkimizda/">HAKKIMIZDA</a></li>
                            <li><a href="/Home/Hizmetlerimiz/">HİZMETLERİMİZ</a></li>
                            <li><a href="/Home/Blog/">BLOG</a></li>
                            <li><a href="/Home/İletisim/">İLETİŞİM</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>
        <!-- end header -->
        @RenderBody()
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="widget">
                            <h5 class="widgetheading">Bizimle İletişime Geçin</h5>
                            <address>
                                <i class="fa fa-map-marker"></i>
                               
                               
                                @ViewBag.Iletisim.Adres
                               
                            </address>
                            <p>
                                <i class="fa fa-phone"></i> @ViewBag.Iletisim.Telefon<br>
                                <i class="fa fa-whatsapp"></i> @ViewBag.Iletisim.Whatsapp<br>
                                <i class="fa fa-fax"></i> @ViewBag.Iletisim.Fax
                            
                            </p>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="widget">
                            <h5 class="widgetheading">Sayfalar</h5>
                            <ul class="link-list">
                                <li><a href="#">Basın Bülteni</a></li>
                                <li><a href="#">Şartlar ve Koşullar</a></li>
                                <li><a href="#">Gizlilik Politikası</a></li>
                                <li><a href="#">Kariyer Merkezi</a></li>
                                <li><a href="#">Contact us</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="widget">
                            <h5 class="widgetheading">Son Blog Yazıları</h5>
                            <ul class="link-list">
                                @foreach (var item in ViewBag.Blog)
                                {
                                    <li><a href="/Home/BlogDetay/@item.BlogId">@item.Baslik</a></li>
                                }
                                

                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="widget">
                            <h5 class="widgetheading">Hizmetlerimiz</h5>
                            <div class="flickr_badge">
                                @foreach (var item in ViewBag.Hizmetler)
                                {
                                    <img src="@item.ResimURL" widht="75" height="30"/>
                                }

                            </div>
                            <div class="clear">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="sub-footer">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="copyright">
                                <p>@DateTime.Now.Year&copy; Tüm hakları gizlidir.</p>
                                <div class="credits">
                                    <!--
                                      All the links in the footer should remain intact.
                                      You can delete the links only if you purchased the pro version.
                                      Licensing information: https://bootstrapmade.com/license/
                                      Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/buy/?theme=Moderna
                                    -->
                                    Designed by <a href="https://instagram.com/bulentkipcak/">BBB Development</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <ul class="social-network">
                                <li><a href="@ViewBag.Iletisim.Facebook" data-placement="top" title="Facebook"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="@ViewBag.Iletisim.Twitter" data-placement="top" title="Twitter"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="@ViewBag.Iletisim.Instagram" data-placement="top" title="Instagram"><i class="fa fa-instagram"></i></a></li>
                                
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <a href="#" class="scrollup"><i class="fa fa-angle-up active"></i></a>
