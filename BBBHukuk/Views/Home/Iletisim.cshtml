
@{
    ViewBag.Title = "Iletisim";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li><a href="/Home/"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
                    <li class="active">İletişim</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section id="content">
    <div class="map">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3023.0236567729266!2d30.330483675942897!3d40.739504971389444!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14ccaded7dec075d%3A0xf44f0ec16a4381ee!2sSakarya%20Uygulamal%C4%B1%20Bilimler%20%C3%9Cniversitesi%20Teknoloji%20Fak%C3%BCltesi!5e0!3m2!1sen!2str!4v1703288869465!5m2!1sen!2str" width="100%" height="380" frameborder="0" style="border:0" allowfullscreen></iframe>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <h4>Aşağıdaki formu kullanarak bizimle iletişime geçebilirsiniz!</h4>
                <div class="alert alert-info" >@ViewBag.Uyari</div>
                <div id="errormessage"></div>
                <form action="/Home/Iletisim/" method="post" role="form" class="contactForm">
                    <div class="form-group">
                        <input type="text" name="adsoyad" class="form-control" id="adsoyad" placeholder="İsim Soyisim" data-rule="minlen:4" data-msg="En az 4 karakter giriniz." />
                        <div class="validation"></div>
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" id="email" placeholder="E-mail" data-rule="email" data-msg="Geçerli bir eposta adresi giriniz." req/>
                        <div class="validation"></div>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="konu" id="subject" placeholder="Konu" data-rule="minlen:4" data-msg="En az 8 karakter giriniz." required />
                        <div class="validation"></div>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="mesaj" rows="5" data-rule="required" data-msg="Lütfen bizim için bir şeyler yazın." placeholder="Mesaj" required></textarea>
                        <div class="validation"></div>
                    </div>
                    <div class="text-center"><button type="submit" class="btn btn-theme">Gönder</button></div>
                </form>
            </div>
        </div>
    </div>
</section>

